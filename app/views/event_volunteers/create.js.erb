<!-- refresh 'Attend' btn to show 'Opt Out' --> 


<% if @attend == "true" %>

  $(".events_signup").html("<%= escape_javascript(render('events/opt_out')) %>")
  $(".watch").html("<%= escape_javascript(render('events/blank_watch')) %>")

<% else %>

  $(".watch").html("<%= escape_javascript(render('events/unwatch_event')) %>")

<% end %>