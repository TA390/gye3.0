<!-- refresh 'Opt Out' btn to show 'Attend' -->

<% if @attend == "true" %>

  $(".events_signup").html("<%= escape_javascript(render('events/sign_up')) %>")
  $(".watch").html("<%= escape_javascript(render('events/watch_event')) %>")

<% else %>
  $(".watch").html("<%= escape_javascript(render('events/watch_event')) %>")
<% end %>