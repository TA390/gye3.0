    <div class="col-md-9">
      <%= will_paginate %>
      <% @events.each do |event| %>
      
      
      
      
        <div class = "one_event">
          <div class ="row">

            <div class="col-md-3">
              <div class="container">
                <div class ="event_pic">
              
                 

                  <!-- load picture if an event has one -->
                  <%if event.picture?%> 
                  <%= image_tag event.picture.url, class:"img-cirlcle"%>
                  <% end%>
                  
                  <!-- the following is fefault photo-->
                  <%if !event.picture?%> 
                    <img class="img-circle" src="http://wikivillage.co.za/sites/default/files/media/garden-route-spca/garden-route-spca1.jpg" alt="description here "/>
                  <%end%> 
                  
                </div>
              </div>
            </div>

            <div class="col-md-9 ">
              
              <span class="ngo"><h3><%= event.name %></h3></span>
              <span class="hosting_ngo"> <h5> hosted by <%= link_to event.ngo.name, ngo_path(event.ngo)%> </h4> </span>
             <br>
              <span class="start"> <p> Start Time: <%= event.start %> </p> </span>
              <span class="end"> <p> End Time: <%= event.end %> </p> </span>
               <span class="description"> <p> Event Description: <%= event.description %> </p></span>
            
              
              <%= button_to 'I want to help!', event_path(event),
                    method: :get, :class => "btn btn-primary"%>
              
              <% if current_ngo?(event.ngo) %>
                <%= button_to "Delete", event, method: :delete,
                      data: { confirm: "Are you Sure?" },
                      :class => "btn btn-info" %>
              <% end %>

              <br/>
              <br/>
              <br/>
            </div>
          </div>
          <!--End of Row -->
        </div>
        <!--End of one_volunteer wrappper -->
      <% end %>
      <%= will_paginate %>
    </div>


