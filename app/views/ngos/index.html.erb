<% provide(:title, 'GiveYourEffort - NGO List') %>

<body class="n_index">
  
  <div class="dropdownbarbox">
    <div class="container">
      <div class="dropdownbox_des">
 			  <h1> NGO List </h1> 
				<h2>  </h2>
        </div>
      </div>
  </div>

  <div class="search_result">
    
		<h2> GiveYourEffort partnered NGOs </h2>
 
	</div>
 
  <div class="container">
    <%= will_paginate %>
      <%= @ngos.each do |ngo| %>
        <div class = "one_ngo">
          <div class ="row">
            <div class="col-md-3">
              <div class="container">
                <div class ="ngo_pic">
                  <%= image_tag ngo.avatar.url(:medium), size: '250x250', class: 'img-circle' %>    
                </div>
              </div>
            </div>

            <div class="col-md-9 ">
              <h3><%= ngo.name %> </h3>
             
              <p>Location: <%= ngo.location %></p>
               <p>Website: <%= ngo.url %></p>
              <%=button_to 'Show', ngo, :method => :get, :class => "btn btn-info"%>
            </div>
          </div>
          <!--End of Row -->
        </div>
        <!--End of one_volunteer wrappper -->
      <% end %>
      <%= will_paginate %>
      </div>
  
 
</body>

<br>

