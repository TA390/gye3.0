<% provide(:title, 'Password Reset') %>

<div id="signupform">
      
  <div class="container">
    <div class="row text-center">
      <br/>
        <h1>Password Reset</h1>
      <br/>
    </div>
  </div>   
      
  <div class="container">
    <div class="row centered-form">
      <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div class="panel panel-default">
          
          <div class="panel-heading">    
            <h3 class="panel-title"> email me the link
            </h3>
          </div>
          
          <div class="panel-body">
                          
            <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
            
              <%= render 'shared/error_messages', object: f.object %>
            
              <%= hidden_field_tag :email, @user.email %>
              
                <form role="form">
                              
                  <div class="form-group">
                    <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>
                  </div>
                  
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: 'form-control' %>
                  </div>
                  
                  <%= f.submit "New Password", class: "btn btn-primary" %>
                            
                </form>
                  
            <% end %>
                
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>