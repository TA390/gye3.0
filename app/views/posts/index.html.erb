<h1>Listing posts</h1>

<table>
  <tr>
    <th>Volunteer</th>
    <th>Comment</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.volunteer.name %></td>
    <td><%= post.comment %></td>

    <!-- /events/:event_id/posts/:id -->
    <td><%= link_to 'Show', [post.event, post] %></td>
    <!-- /events/:event_id/posts/:id/edit -->
    <td><%= link_to 'Edit', edit_event_post_path(post.event, post)%></td>
    <!-- /events/:event_id/posts/:id -->
    <td><%= link_to 'Destroy', [post.event, post], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

