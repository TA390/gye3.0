
      <%= form_for(current_user.event_calendars.build, remote: true) do |f| %>       
       <div class="form-horizontal">
         <div class="form-group">
           <label class="control-label col-xs-2">Calendar Entry</label>
           <div class="col-xs-8">
             <%= f.text_field :title, placeholder: "Calender Entry", class: 'form-control' %>
           </div>
         </div>
                        
         <div class="form-group">
           <label class="control-label col-xs-2">Start Date/Time</label>
           <div class="col-xs-8">
             <%= f.datetime_select :start, class: 'form-control' %>
           </div>
         </div>
                        
         <div class="form-group">
           <label class="control-label col-xs-2">End Date/Time</label>
           <div class="col-xs-8">
             <%= f.datetime_select :end, class: 'form-control' %>
           </div>
         </div>
                        
         <div>
           <%= f.hidden_field :color, value: "#83bf17" %>
         </div>                 

         <div class="form-group">      
           <%= f.submit "Add to Calendar", class: "btn btn-default cal-sub-btn" %>
           <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
         </div> 
       </div>
     <% end %>            
