<script>
  $('#calendar').fullCalendar( 'refetchEvents' );
</script>

<div class="cal-form-partial">
      <%= form_for(current_user.event_calendars.build, remote: true) do |f| %> 

        <div class="form-horizontal">
          
          <div class="form-group">
            <label class="col-sm-2 control-label">Calendar Entry</label>
            <div class="col-sm-10">
              <%= f.text_field :title, placeholder: "Calender Entry", class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">Start Date/Time</label>
            <div class="col-sm-10">
              <%= f.datetime_select :start, class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">End Date/Time</label>
            <div class="col-sm-10">
              <%= f.datetime_select :end, class: 'form-control' %>
            </div>
          </div>
          
          <div>
            <%= f.hidden_field :color, value: "#83bf17" %>
          </div> 
          
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Add to Calendar", class: "btn btn-primary cal-sub-btn" %>
            </div>
          </div>
          
        </div>

     <% end %>
</div>
