<!-- watched events -->

<div class = "v_sorted">
  
<div class = "container">
  
<% if @past_events.any? %>
<h3><%= @past_title %></h3>
  <% @past_events.each do |event| %>

  
  <div class="one_event row">  
    
    
  <div class="event_pic col-md-6">
        <%= link_to (image_tag event.avatar.url(:medium), size: '250x250'), event_path(event) %>   
  </div>
  
  
  <div class="col-md-6">
             
      <div>
        <br>
         <br>
        <%= event.name %>   
      </div>
      <div>
        <%= event.description %>   
      </div>
  
      <div>
        <%= event.start.to_formatted_s(:short) %>   
         <br>
         <br>
      </div>
      
      <!-- display 'Opt out' btn on user's profile -->
      <div>   
        <%= button_to 'Event page', event_path(event),
              method: :get, class: "btn btn-danger"%>
      </div> 
      <!-- end display 'Opt out' btn on user's profile -->
    
      </div>
    
       </div>  

         <br>
    <% end %>     
       </div> 

      <% else %> 
    
 
 <div class="v_e_search_bar">
   <h1> Opps! No events found here <%= link_to "(find out more below)",  events_path%></h1>
  </div>
     <br>
  
     <%=  link_to image_tag('volunteer-bg/empty_corp2.jpg',size: '1135x350'),events_path %>
     <br>
    <br>
   <%=  link_to image_tag('volunteer-bg/empty_corp3.jpg',size: '1135x350'),events_path %>
    <br>
   <br>
   <%=  link_to image_tag('volunteer-bg/empty_corp5.jpg',size: '1135x350'),events_path %>
    <br>
    <br>
   <%=  link_to image_tag('volunteer-bg/empty_corp6.jpg',size: '1135x350'),events_path %>
    <br>
    <br>
   <br>
    <br>
    <br>
  <% end %>

</div> 


