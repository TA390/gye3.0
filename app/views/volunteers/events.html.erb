<% provide(:title, @title) %>
<!-- jquery for tabs -->
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

  <script>
    $(function() {
      $( "#tabs" ).tabs();
    });
  </script>
<!-- end jquery for tabs -->
</head>

<body class = "v_event_all">
  
  <div class="dropdownbarbox">
    <div class="container">
      <div class="dropdownbox_des">
        <h1><%= @user.name %>'s Events</h1>
        <h2 style="font: 30px"><span><%= link_to "<< Back to Profile", @user %></span></h2>
      </div>
    </div>
  </div>  
  
