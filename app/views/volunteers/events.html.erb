<div class="container" style="padding: 3% 0%;">
  
  <ul class="nav nav-tabs container" role="tablist" id="tabs">
  
  <li role="presentation" class="active">  
    <a href="#upcoming" aria-controls="upcoming" role="tab" data-toggle="tab">Upcoming Events (<%= @events.count() %>)</a>
  </li>
  <li>
    <a href="#watchlist" aria-controls="watchlist" role="tab" data-toggle="tab">Watchlist (<%= @watch_events.count() %>)</a>
  </li>
  <li>
    <a href="#past" aria-controls="past" role="tab" data-toggle="tab">Past Event (<%= @past_events.count() %>)</a>
  </li>
  
  </ul>

  
<div class="tab-content" style="border-color: red;">
 

  <div role="tabpanel" class="tab-pane active"  id="upcoming">
    <%= render 'event_list' %>
  </div>

  <div role="tabpanel" class="tab-pane" id="watchlist">
    <%= render 'watch_event_list' %>
  </div>
  
  <div role="tabpanel" class="tab-pane" id="past">
    <%= render 'past_event_list' %>
  </div>

 
  
</div>

</div><!--end of v_event_all-->
  
</body>
  