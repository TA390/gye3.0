<div id="signupform">
      
  <div class="container">
    <div class="row text-center">
      <br/>
        <h1>Volunteer</h1>
      <br/>
    </div>
  </div>   
      
  <div class="container">
    <div class="row centered-form">
      <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        <div class="panel panel-default">
          
          <div class="panel-heading">    
            <h3 class="panel-title"> Join us and make an impact <small>It's free!</small></h3>
          </div>
          
          <div class="panel-body">
                          
            <%= form_for(@user) do |f| %>

              <%= render 'shared/error_messages' if params[:commit] == "Create Volunteer Account" %>
              
                <form role="form">
                  
                  <div class="row">  
                    <div class="col-xs-6 col-sm-6 col-md-6">  
                      <div class="form-group">                  
                        <%= f.text_field :name, placeholder: "First Name", class: 'form-control' %>
                      </div>
                    </div>
                                
                    <div class="col-xs-6 col-sm-6 col-md-6">
                      <div class="form-group">
                        <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control' %>
                      </div>
                    </div>
                  </div>
                
                  <div class="radio form-group form-inline">
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <%= f.radio_button :gender, "M" %> Male           
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
                    <%= f.radio_button :gender, "F" %> Female
                  </div>
                  
                  <br/>
                              
                  <div class="form-group">
                    <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>
                  </div>

                  <div class="form-group">
                    <%= f.text_field :location, placeholder: "Location", class: 'form-control' %>
                  </div>

                  <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                      <div class="form-group">
                        <%= f.password_field :password, placeholder: "Password",class: 'form-control' %>
                      </div>
                    </div>
                    
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                      <%= f.password_field :password_confirmation, 
                                            placeholder: "Confirm Pasword", 
                                            class: 'form-control' %>
                    </div>
                  </div>
                    
                </div>
                            
                  <%= submit_tag 'Create Volunteer Account', class: "btn btn-primary" %>
                            
                </form>
                  
                  <% end %>
                
              </div>
            </div>
          </div>
        </div>
      </div>  
    </div>