<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "back to profile", @user %></span>
      <span><b>Events:</b> <%= @user.events.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/my_events' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="">
        <%= render 'volunteers/show_event' %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>